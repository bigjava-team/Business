<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.bigjava.orders.entity">
	<class name="Orders" table="orders"><!-- 订单类 -->
		<id name="o_id" type="java.lang.Integer"><!-- 订单id -->
			<generator class="native"></generator>
		</id>
		<property name="total" not-null="true" /><!-- 订单总金额 -->
		<property name="ordertim" not-null="true" /><!-- 订单时间 -->
		<property name="state" not-null="true" /><!-- 订单状态 -->
		
		<many-to-one name="user" column="u_id" class="org.bigjava.user.entity.User" lazy="false" /><!-- 多对一订单表指向用户表 -->
	
		<many-to-one name="addr" column="a_id" class="org.bigjava.addr.entity.Addr" lazy="false" /><!-- 设置外键连接收货地址表 -->
		
		<many-to-one name="product" column="p_id" class="org.bigjava.product.entity.Product" lazy="false" /><!-- 设置外键连接订单表 -->
	</class>
</hibernate-mapping>   